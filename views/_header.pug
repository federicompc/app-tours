header.header
 nav.nav.nav--tour
    .header__logo 
      img(src="/img/logo-white.png" alt="Natours logo")  
    if user
     a.nav__el.icon(href="/") 
      i.fa.fa-street-view
     a.nav__el.nav__el--logout.icon 
      i.fa.fa-sign-out
     a.nav__el(href="/me") 
         img.nav__user-img(src=`/img/users/${user.photo}` alt="User photo")
         i.fa.fa-user-o
         span=user.name.split(" ")[0]
    else
     a.nav__el(href="/") 
      i.fa.fa-street-view.icon
     a.nav__el(href="/login")
      i.fa.fa-user-o.icon
      span.sg Login
     a.nav__el(href="/signup")
      i.fa.fa-user-o.icon
      span.sg Signup